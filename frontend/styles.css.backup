/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji';
    background: linear-gradient(180deg, #4a90e2 0%, #7b68ee 50%, #9b59b6 100%);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    overflow: hidden;
}

/* Screen Management */
.screen {
    width: 100%;
    max-width: 1200px;
    height: 100vh;
    max-height: 800px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: opacity 0.3s ease;
}

.screen.hidden {
    display: none;
    opacity: 0;
    pointer-events: none;
}

.game-container {
    max-width: 800px;
    width: 100%;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

/* Header */
.game-header {
    text-align: center;
    margin-bottom: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 15px;
}

.game-header h1 {
    font-size: 2.5em;
    color: #667eea;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    flex: 1;
    min-width: 200px;
}

.score-display {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    padding: 10px 20px;
    border-radius: 25px;
    color: white;
    font-weight: bold;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.score-display .label {
    margin-right: 10px;
}

.score-display .score {
    font-size: 1.5em;
}

/* Caller Section */
.caller-section {
    background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    border-radius: 15px;
    padding: 25px;
    margin-bottom: 30px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

.current-number {
    text-align: center;
    margin-bottom: 15px;
}

.number-display {
    display: inline-block;
    font-size: 4em;
    font-weight: bold;
    color: white;
    background: rgba(0, 0, 0, 0.2);
    padding: 20px 40px;
    border-radius: 15px;
    min-width: 150px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    animation: pulse 0.5s ease-in-out;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

.caller-info {
    text-align: center;
}

.caller-info p {
    color: white;
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 10px;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
}

.timer-bar {
    width: 100%;
    height: 10px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 5px;
    overflow: hidden;
}

.timer-fill {
    height: 100%;
    background: white;
    width: 0%;
    transition: width 0.1s linear;
    border-radius: 5px;
}

/* Bingo Card */
.bingo-card-container {
    margin-bottom: 30px;
}

.bingo-header {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
    margin-bottom: 10px;
}

.bingo-letter {
    text-align: center;
    font-size: 2em;
    font-weight: bold;
    color: #667eea;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
}

.bingo-card {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    padding: 15px;
    border-radius: 15px;
    box-shadow: inset 0 4px 10px rgba(0, 0, 0, 0.1);
}

.bingo-tile {
    aspect-ratio: 1;
    background: white;
    border: 3px solid #667eea;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8em;
    font-weight: bold;
    color: #333;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    user-select: none;
}

.bingo-tile:hover:not(.marked):not(.free) {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    background: #f0f0f0;
}

.bingo-tile.marked {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: white;
    border-color: #f5576c;
    transform: scale(0.95);
}

.bingo-tile.free {
    background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
    font-size: 1.2em;
    border-color: #fcb69f;
}

.bingo-tile.winning {
    animation: winningTile 0.6s ease-in-out infinite;
}

@keyframes winningTile {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); box-shadow: 0 0 20px rgba(245, 87, 108, 0.8); }
}

/* Called Numbers */
.called-numbers-section {
    margin-bottom: 30px;
}

.called-numbers-section h3 {
    text-align: center;
    color: #667eea;
    margin-bottom: 15px;
    font-size: 1.3em;
}

.called-numbers {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: center;
    min-height: 60px;
    padding: 15px;
    background: rgba(102, 126, 234, 0.1);
    border-radius: 10px;
}

.called-number {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.9em;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    animation: popIn 0.3s ease-out;
}

@keyframes popIn {
    0% { transform: scale(0); opacity: 0; }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); opacity: 1; }
}

/* Controls */
.controls {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
}

.btn {
    padding: 15px 30px;
    font-size: 1.1em;
    font-weight: bold;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.btn:hover:not(:disabled) {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
}

.btn:active:not(:disabled) {
    transform: translateY(-1px);
}

.btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.btn-secondary {
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    color: #333;
}

.btn-large {
    padding: 20px 50px;
    font-size: 1.3em;
}

/* Win Modal */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    justify-content: center;
    align-items: center;
}

.modal.show {
    display: flex;
    animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-content {
    background: white;
    padding: 50px;
    border-radius: 20px;
    text-align: center;
    max-width: 500px;
    width: 90%;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    position: relative;
    animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
    from { transform: translateY(50px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

.modal-content h2 {
    font-size: 3em;
    color: #667eea;
    margin-bottom: 20px;
    animation: bounce 1s ease-in-out infinite;
}

@keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

.win-message {
    font-size: 1.5em;
    color: #333;
    margin-bottom: 20px;
}

.win-pattern {
    font-size: 1.2em;
    color: #f5576c;
    font-weight: bold;
    margin-bottom: 30px;
}

/* Confetti Animation */
.confetti-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
    border-radius: 20px;
}

.confetti {
    position: absolute;
    width: 10px;
    height: 10px;
    background: #f5576c;
    animation: confettiFall 3s linear infinite;
}

@keyframes confettiFall {
    0% { transform: translateY(-100%) rotate(0deg); opacity: 1; }
    100% { transform: translateY(600px) rotate(720deg); opacity: 0; }
}

/* Responsive Design */
@media (max-width: 600px) {
    .game-container {
        padding: 20px;
    }

    .game-header h1 {
        font-size: 1.8em;
    }

    .number-display {
        font-size: 3em;
        padding: 15px 30px;
    }

    .bingo-tile {
        font-size: 1.4em;
    }

    .bingo-letter {
        font-size: 1.5em;
    }

    .btn {
        padding: 12px 20px;
        font-size: 1em;
    }

    .modal-content {
        padding: 30px;
    }

    .modal-content h2 {
        font-size: 2em;
    }
}
